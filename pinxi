########################################################################

#### -------------------------------------------------------------------
#### DATA CONTROLLERS
#### -------------------------------------------------------------------

sub generate_data {
	eval $start;
	# log_data('cat', '/proc/mounts');
	print "stub: " . (caller(0))[3] . "\n";
	eval $end;
}

