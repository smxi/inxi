  Info:
    model: AMD EPYC 7281
    bits: 64
    type: MT MCP MCM SMP
    arch: Zen
      gen: 1
    level: v3
      note: check
    process: GF 14nm
    built: 2017\-19
    family:0x17 (23)
    model\-id:1
    stepping: 2
    microcode: 0x8001250
  Topology:
    cpus: 2
